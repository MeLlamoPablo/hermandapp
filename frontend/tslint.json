{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts"
		]
	},
	"rules": {
		"interface-name": [
			true,
			"never-prefix"
		],
		"array-type": [true, "generic"],
		"jsx-no-lambda": false
	}
}
