{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts"
		]
	},
	"rules": {
		"max-line-length": [true, 80],
		"interface-name": [
			true,
			"never-prefix"
		],
		"array-type": [
			true,
			"generic"
		],
		"jsx-no-lambda": false,
		"quotemark": [
			true,
			"double",
			"avoid-escape"
		],
		"semicolon": [true, "never"]
	}
}
