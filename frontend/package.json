{
	"name": "frontend",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"bulma": "^0.7.1",
		"react": "^16.4.0",
		"react-dom": "^16.4.0",
		"react-scripts-ts": "2.16.0"
	},
	"scripts": {
		"start": "run-p start-js watch-css",
		"build": "run-s build-css build-js",
		"start-js": "react-scripts-ts start",
		"build-js": "react-scripts-ts build",
		"build-css": "node-sass-chokidar src/ --include-path ./src --include-path ./node_modules -o src/",
		"watch-css": "npm run build-css && node-sass-chokidar src/ --include-path ./src --include-path ./node_modules -o src/ --watch --recursive",
		"test": "react-scripts-ts test --env=jsdom",
		"eject": "react-scripts-ts eject"
	},
	"devDependencies": {
		"@types/jest": "^22.2.3",
		"@types/node": "^10.1.2",
		"@types/react": "^16.3.14",
		"@types/react-dom": "^16.0.5",
		"node-sass-chokidar": "^1.3.0",
		"npm-run-all": "^4.1.3",
		"typescript": "^2.8.3"
	},
	"engines": {
		"node": "8.11.2",
		"yarn": "1.6.0",
		"npm": "5.6.0"
	}
}
